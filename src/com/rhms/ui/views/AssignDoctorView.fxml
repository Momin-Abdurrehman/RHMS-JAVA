<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="500.0" prefWidth="700.0"
            xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.rhms.ui.controllers.AssignDoctorController">
    <top>
        <VBox alignment="CENTER" spacing="10.0" BorderPane.alignment="CENTER">
            <padding>
                <Insets top="20.0" right="10.0" bottom="10.0" left="10.0"/>
            </padding>
            <children>
                <Label text="Assign Doctor to Patient" styleClass="section-title">
                    <font>
                        <Font name="System Bold" size="18.0"/>
                    </font>
                </Label>
                <Label text="Select a doctor and patient to create an assignment" styleClass="section-subtitle"/>
            </children>
        </VBox>
    </top>
    <center>
        <HBox spacing="20.0" BorderPane.alignment="CENTER">
            <padding>
                <Insets top="10.0" right="10.0" bottom="10.0" left="10.0"/>
            </padding>
            <children>
                <!-- Doctor List -->
                <VBox spacing="10.0" HBox.hgrow="ALWAYS">
                    <children>
                        <Label text="Available Doctors:" styleClass="list-header"/>
                        <TableView fx:id="doctorTable" VBox.vgrow="ALWAYS">
                            <columns>
                                <TableColumn fx:id="doctorIdColumn" text="ID" prefWidth="50.0"/>
                                <TableColumn fx:id="doctorNameColumn" text="Name" prefWidth="150.0"/>
                                <TableColumn fx:id="doctorSpecialtyColumn" text="Specialty" prefWidth="150.0"/>
                            </columns>
                        </TableView>
                    </children>
                </VBox>
                
                <!-- Patient List -->
                <VBox spacing="10.0" HBox.hgrow="ALWAYS">
                    <children>
                        <Label text="Available Patients:" styleClass="list-header"/>
                        <TableView fx:id="patientTable" VBox.vgrow="ALWAYS">
                            <columns>
                                <TableColumn fx:id="patientIdColumn" text="ID" prefWidth="50.0"/>
                                <TableColumn fx:id="patientNameColumn" text="Name" prefWidth="150.0"/>
                                <TableColumn fx:id="patientAssignedColumn" text="Has Doctor" prefWidth="100.0"/>
                            </columns>
                        </TableView>
                    </children>
                </VBox>
            </children>
        </HBox>
    </center>
    <bottom>
        <VBox spacing="15.0" BorderPane.alignment="CENTER">
            <padding>
                <Insets top="10.0" right="10.0" bottom="20.0" left="10.0"/>
            </padding>
            <children>
                <!-- Current Assignments -->
                <TitledPane text="Current Assignments" expanded="false">
                    <content>
                        <TableView fx:id="assignmentTable">
                            <columns>
                                <TableColumn fx:id="assignmentDoctorColumn" text="Doctor" prefWidth="200.0"/>
                                <TableColumn fx:id="assignmentPatientColumn" text="Patient" prefWidth="200.0"/>
                            </columns>
                        </TableView>
                    </content>
                </TitledPane>
                
                <!-- Feedback Area -->
                <TextArea fx:id="messageArea" editable="false" prefHeight="80.0"
                          prefWidth="200.0" wrapText="true"/>
                
                <!-- Button Controls -->
                <HBox alignment="CENTER" spacing="20.0">
                    <children>
                        <Button fx:id="assignButton" text="Assign Doctor to Patient" 
                                onAction="#handleAssign" defaultButton="true"/>
                        <Button fx:id="removeButton" text="Remove Assignment"
                                onAction="#handleRemove"/>
                        <Button fx:id="closeButton" text="Close"
                                onAction="#handleClose" cancelButton="true"/>
                    </children>
                </HBox>
            </children>
        </VBox>
    </bottom>
</BorderPane>
