<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="600.0" prefWidth="800.0"
            xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.rhms.ui.controllers.PatientAppointmentsController"
            styleClass="content-pane">
    <top>
        <VBox spacing="5.0" alignment="CENTER" BorderPane.alignment="CENTER">
            <padding>
                <Insets top="15.0" right="15.0" bottom="10.0" left="15.0"/>
            </padding>
            <children>
                <Label text="My Appointments" styleClass="section-title">
                    <font>
                        <Font name="System Bold" size="18.0"/>
                    </font>
                </Label>
                <HBox alignment="CENTER_RIGHT" spacing="15.0">
                    <children>
                        <Label fx:id="totalAppointmentsLabel" text="Total: 0" styleClass="stat-label"/>
                        <Label fx:id="upcomingAppointmentsLabel" text="Upcoming: 0" styleClass="stat-label"/>
                    </children>
                </HBox>
            </children>
        </VBox>
    </top>
    <center>
        <SplitPane dividerPositions="0.7" orientation="VERTICAL" BorderPane.alignment="CENTER">
            <items>
                <VBox>
                    <children>
                        <TableView fx:id="appointmentsTable" VBox.vgrow="ALWAYS">
                            <columns>
                                <TableColumn fx:id="dateColumn" text="Date" prefWidth="100.0"/>
                                <TableColumn fx:id="timeColumn" text="Time" prefWidth="80.0"/>
                                <TableColumn fx:id="doctorColumn" text="Doctor" prefWidth="150.0"/>
                                <TableColumn fx:id="purposeColumn" text="Purpose" prefWidth="200.0"/>
                                <TableColumn fx:id="statusColumn" text="Status" prefWidth="80.0"/>
                                <TableColumn fx:id="notesColumn" text="Notes" prefWidth="150.0"/>
                            </columns>
                        </TableView>
                    </children>
                </VBox>
                <VBox spacing="10.0">
                    <padding>
                        <Insets top="10.0" right="10.0" bottom="10.0" left="10.0"/>
                    </padding>
                    <children>
                        <Label text="Appointment Details" styleClass="subsection-title">
                            <font>
                                <Font name="System Bold" size="14.0"/>
                            </font>
                        </Label>
                        <GridPane hgap="10.0" vgap="8.0">
                            <columnConstraints>
                                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="400.0"/>
                            </columnConstraints>
                            <rowConstraints>
                                <RowConstraints minHeight="10.0" prefHeight="25.0" vgrow="SOMETIMES"/>
                                <RowConstraints minHeight="10.0" prefHeight="25.0" vgrow="SOMETIMES"/>
                                <RowConstraints minHeight="10.0" prefHeight="25.0" vgrow="SOMETIMES"/>
                                <RowConstraints minHeight="10.0" prefHeight="25.0" vgrow="SOMETIMES"/>
                                <RowConstraints minHeight="10.0" prefHeight="25.0" vgrow="SOMETIMES"/>
                                <RowConstraints minHeight="10.0" prefHeight="60.0" vgrow="SOMETIMES"/>
                            </rowConstraints>
                            <children>
                                <Label text="Date:" styleClass="field-label"/>
                                <Label text="Time:" styleClass="field-label" GridPane.rowIndex="1"/>
                                <Label text="Doctor:" styleClass="field-label" GridPane.rowIndex="2"/>
                                <Label text="Purpose:" styleClass="field-label" GridPane.rowIndex="3"/>
                                <Label text="Status:" styleClass="field-label" GridPane.rowIndex="4"/>
                                <Label text="Notes:" styleClass="field-label" GridPane.rowIndex="5"/>
                                
                                <Label fx:id="dateValueLabel" text="" GridPane.columnIndex="1"/>
                                <Label fx:id="timeValueLabel" text="" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
                                <Label fx:id="doctorValueLabel" text="" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
                                <Label fx:id="purposeValueLabel" text="" GridPane.columnIndex="1" GridPane.rowIndex="3"/>
                                <Label fx:id="statusValueLabel" text="" GridPane.columnIndex="1" GridPane.rowIndex="4"/>
                                <TextArea fx:id="notesTextArea" editable="false" wrapText="true" prefHeight="60.0" 
                                         GridPane.columnIndex="1" GridPane.rowIndex="5"/>
                            </children>
                        </GridPane>
                    </children>
                </VBox>
            </items>
        </SplitPane>
    </center>
    <bottom>
        <HBox alignment="CENTER_RIGHT" spacing="10.0" BorderPane.alignment="CENTER">
            <padding>
                <Insets top="10.0" right="15.0" bottom="15.0" left="15.0"/>
            </padding>
            <children>
                <Button fx:id="scheduleButton" text="Schedule New Appointment" 
                        onAction="#handleScheduleAppointment" defaultButton="true"/>
                <Button fx:id="cancelButton" text="Cancel Appointment" 
                        onAction="#handleCancelAppointment"/>
                <Button fx:id="closeButton" text="Close" 
                        onAction="#handleClose" cancelButton="true"/>
            </children>
        </HBox>
    </bottom>
</BorderPane>
